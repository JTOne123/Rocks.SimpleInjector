<Project Sdk="Microsoft.NET.Sdk">
    <!-- Properties -->
    <PropertyGroup>
        <DefaultItemExcludes>$(DefaultItemExcludes);**\*.v3.ncrunchproject;**\*.v3.ncrunchproject.user</DefaultItemExcludes>
        <TargetFrameworks>net46;net461;net462;net47;netstandard2.0</TargetFrameworks>
        <Version>4.0.0</Version>
        <FileVersion>$(Version)</FileVersion>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <Authors>Michael Logutov</Authors>
        <Company>Michael Logutov</Company>
        <Description>A collection of helper extensions.</Description>
        <Copyright>Copyright © Michael Logutov 2017</Copyright>
    </PropertyGroup>
    <!-- Properties for NuGet package -->
    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <PackageId>Rocks.SimpleInjector</PackageId>
        <PackageVersion>$(Version)</PackageVersion>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageProjectUrl>https://github.com/MichaelLogutov/Rocks.SimpleInjector</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/MichaelLogutov/Rocks.SimpleInjector/blob/master/LICENSE
        </PackageLicenseUrl>
    </PropertyGroup>
    <!-- NuGet packages -->
    <ItemGroup>
        <PackageReference Include="FastMember" Version="1.1.0"/>
        <PackageReference Include="JetBrains.Annotations" Version="11.0.0"/>
        <PackageReference Include="Rocks.Helpers" Version="1.6.0"/>
        <PackageReference Include="SimpleInjector" Version="4.0.8"/>
    </ItemGroup>
    <!-- NuGet packages for .NET 4.6 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net46'">
    </ItemGroup>
    <!-- NuGet packages for .NET 4.6.1 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    </ItemGroup>
    <!-- NuGet packages for .NET 4.6.2 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net462'">
    </ItemGroup>
    <!-- NuGet packages for .NET 4.7 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net47'">
    </ItemGroup>
    <!-- NuGet packages for .NET Standard 2.0 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    </ItemGroup>
    <!-- References -->
    <!-- References for .NET 4.6 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net46'">
    </ItemGroup>
    <!-- References for .NET 4.6.1 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    </ItemGroup>
    <!-- References for .NET 4.6.2 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net462'">
    </ItemGroup>
    <!-- References for .NET 4.7 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net47'">
    </ItemGroup>
    <!-- References for .NET Standard 2.0 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    </ItemGroup>
    <!-- Sources -->
    <!-- Sources for .NET 4.6 - 4.7 -->
    <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    </ItemGroup>
</Project>